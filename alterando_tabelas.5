# COM O CRESCIMENTO DE SEU SISTEMA, HÁ A NECESSIDADE DE CRIAÇÃO DE NOVAS TABELAS.
# PARA NÃO PRECISAR EXCLUÍ-LA E CRIÁ-LA NOVAMENTE, FAZEMOS UMA ALTERAÇÃO NELA COM O COMANDO "ALTER TABLE."


-- ACRESCENTAREMOS UM CAMPO PARA INFORMAR A CIDADE NO CADASTRO DE CLIENTES.

ALTER TABLE COMCLIEN ADD COLUMN C_CIDACLIEN VARCHAR (50);

-- E UM CAMPO PARA INFORMAR O ESTADO.

ALTER TABLE COMCLIEN ADD COLUMN C_ESTCLIEN VARCHAR (50);

-- CRIAMOS O CAMPO PARA ESTADO FORA DO PADRÃO.
-- VAMOS DELETAR UTILIZANDO O COMANDO ALTER TABLE, SÓ QUE AGORA COM O DROP COLUMN:

ALTER TABLE COMCLIEN DROP COLUMN C_ESTCLIEN; 

-- SEMPRE PODEREMOS DELETAR ALGUMA COLUNA INCORRETA...
-- SÓ NÃO PODEMOS EXCLUIR AS COLUNAS QUE SÃO FOREIGN KEY, O SGBD NÃO PERMITIRÁ ISSO,
-- PARA NÃO CORROMPER A INTEGRIDADE DOS DADOS, UMA VEZ QUE PERDERÁ O PONTO
-- A QUE OUTRAS TABELAS ESTÃO REFERINDO-SE.

ALTER TABLE COMCLIEN ADD COLUMN C_ESTACLIEN VARCHAR (50);

-- PODEMOS UTILIZAR O ALTER TABLE PARA ALTERAR O TIPO DO CAMPO.
-- MUDAR O CAMPO C_ESTACLIEN PARA O TIPO NUMÉRICO, AGORA COM O MODIFY.

ALTER TABLE COMCLIEN MODIFY COLUMN C_ESTACLIEN INT;

-- ALTERANDO O TAMANHO DO CAMPO C_ESTACLIEN E MANTENDO SEU TIPO COMO VARCHAR UTILIZANDO O MODIFY.

ALTER TABLE COMCLIEN MODIFY COLUMN C_ESTACLIEN VARCHAR (100);

