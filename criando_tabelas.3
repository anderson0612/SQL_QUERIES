	N_NUMECLIEN INT NOT NULL AUTO_INCREMENT, # a cláusula autoa_increment é utilizada para incrementar automaticamente o valor da chave primaria.
	C_CODICLIEN VARCHAR (10),
	C_NOMECLIEN VARCHAR (100),
	C_RAZACLIEN VARCHAR (100),
